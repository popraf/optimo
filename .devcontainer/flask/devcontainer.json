{
    "name": "Optimo Flask Dev Container",
    "dockerComposeFile": [
        "../../docker-compose.yml"
    ],
    "service": "optimo-flask",
    "workspaceFolder": "/app_flask",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-azuretools.vscode-docker",
                "ms-python.flake8"
            ],
            "settings": {
                "python.pythonPath": "/usr/local/bin/python",
                "python.analysis.extraPaths": ["/app_flask"],
                "terminal.integrated.defaultProfile.linux": "bash",
                "python.languageServer": "Jedi"
            } 
        }
    },
    "shutdownAction": "stopCompose"
}
